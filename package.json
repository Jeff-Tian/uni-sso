{
  "name": "uni-sso",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "engines": {
    "node": "12.x"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "NODE_ENV=production node dist/main",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest --detectOpenHandles",
    "test:windows": "bash -c \"export DOCKER_HOST='tcp://0.0.0.0:2375'&&test/mongo-up.sh\"&&npm run test:e2e",
    "test:mac": "docker-compose up -d&&npm run test:e2e&&docker-compose down",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json --detectOpenHandles --forceExit",
    "deploy": "npx deploy-node-app&&kubectl apply -f okteto/k8s.yml",
    "update": "kubectl --context=\"kubesail-jeff-tian\" apply -k inf/prod&&kubectl --context=\"cloud_okteto_com\" apply -f okteto/k8s.yml",
    "update-deployment": "kubectl --context=\"kubesail-jeff-tian\" apply -f inf/prod/deployment.yaml&&kubectl --context=\"cloud_okteto_com\" apply -f okteto/k8s.yml",
    "tplant": "tplant --project tsconfig.json --input src/**/\\*.entity.ts --output entities.svg && npm run tplantuml && npm run tplantex && open entities.svg && java -Djava.awt.headless=true -jar tools/plantuml.jar -charset UTF-8 -tlatex:nopreamble entities.puml",
    "tplantuml": "tplant --input src/**/\\*.entity.ts --output entities.puml",
    "tplantex": "npm run tplantuml && (echo \"\\\\\\begin{plantuml}\n\" | cat - entities.puml > /tmp/out) && echo \"\n\n\\\\\\end{plantuml}\n\" >> /tmp/out && cat /tmp/out && mv /tmp/out entities.tex",
    "kubesail": "k8ss switch --cluster=kubesail --namespace=jeff-tian",
    "k8ss:okteto": "k8ss switch --cluster=okteto --namespace=jeff-tian",
    "README": "latexmk -lualatex -f -shell-escape README && open README.pdf",
    "swagger": "wget https://uni-sso-jeff-tian.cloud.okteto.net/api/json -O swagger.json",
    ".env": "sops -e -i config/local.env --aws-profile lambda-doc-rotary",
    "decode-env": "sops -d -i config/local.env --aws-profile lambda-doc-rotary"
  },
  "dependencies": {
    "@hapi/joi": "^16.1.8",
    "@jeff-tian/failable": "^1.4.0",
    "@jeff-tian/keycloak-passport": "^1.0.0",
    "@jeff-tian/memory-storage": "^1.1.11",
    "@jeff-tian/nest-keycloak-connect": "^1.2.1",
    "@nestjs/common": "^7.0.9",
    "@nestjs/core": "^7.0.9",
    "@nestjs/jwt": "^7.0.0",
    "@nestjs/passport": "^7.0.0",
    "@nestjs/platform-express": "^7.0.9",
    "@nestjs/swagger": "^4.5.9",
    "@nestjs/typeorm": "^7.1.0",
    "@typegoose/typegoose": "^6.2.1",
    "@willsoto/nestjs-prometheus": "^0.1.1",
    "axios": "^0.19.2",
    "body-parser": "^1.19.0",
    "body-parser-xml": "^2.0.0",
    "class-validator": "^0.11.0",
    "co-wechat-api": "^3.10.0",
    "cookie-parser": "^1.4.5",
    "data.either": "^1.5.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "keycloak-connect": "^10.0.1",
    "mongoose": "^5.8.7",
    "nestjs-pino": "^1.2.0",
    "nestjs-typegoose": "^7.0.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-keycloak-bearer": "^2.4.0",
    "passport-local": "^1.0.0",
    "pg": "^8.2.1",
    "pino-elasticsearch": "^4.4.1",
    "pino-tee": "^0.3.0",
    "prom-client": "^12.0.0",
    "ramda": "^0.26.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.3",
    "swagger-stats": "^0.99.7",
    "swagger-ui-express": "^4.1.4",
    "typegoose": "^5.9.1",
    "typeorm": "^0.2.25",
    "uuid": "^8.0.0"
  },
  "devDependencies": {
    "@jeff-tian/sleep": "^1.0.0",
    "@jeff-tian/tplant": "^2.6.1",
    "@nestjs/cli": "^7.1.4",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.9",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.1",
    "@types/hapi__joi": "^16.0.4",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.5",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "@types/pino-pretty": "^5.0.0",
    "@types/ramda": "^0.26.37",
    "@types/supertest": "^2.0.8",
    "@types/uuid": "^8.0.0",
    "jest": "^29.6.2",
    "nock": "^12.0.3",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.1.1",
    "ts-node": "^8.4.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.0",
    "typescript": "3.7"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  },
  "deploy-node-app": {
    "prod": {
      "context": "kubesail-jeff-tian",
      "registry": "index.docker.io/v1/",
      "type": "server",
      "port": 3000,
      "protocol": "https",
      "entrypoint": "src\\main.ts",
      "registryUsername": "jefftian",
      "isPublic": true
    }
  }
}
