{
  "name": "uni-sso",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest --detectOpenHandles",
    "test:local": "sh test/mongo-up.sh&&jest --detectOpenHandles",
    "test:windows": "bash -c \"export DOCKER_HOST='tcp://0.0.0.0:2375'&&test/mongo-up.sh\"&&npm run test:e2e",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json --detectOpenHandles --forceExit",
    "deploy": "npx deploy-node-app&&kubectl apply -f okteto/k8s.yml",
    "update": "kubectl --context=\"kubesail-jeff-tian\" apply -k inf/prod&&kubectl --context=\"cloud_okteto_com\" apply -f okteto/k8s.yml",
    "update-deployment": "kubectl --context=\"kubesail-jeff-tian\" apply -f inf/prod/deployment.yaml&&kubectl --context=\"cloud_okteto_com\" apply -f okteto/k8s.yml",
    "tplant": "tplant --input src/**/*.model.ts --output models.svg",
    "kubesail": "k8ss switch --cluster=kubesail --namespace=jeff-tian",
    "k8ss:okteto": "k8ss switch --cluster=okteto --namespace=jeff-tian"
  },
  "dependencies": {
    "@hapi/joi": "^16.1.8",
    "@jeff-tian/keycloak-passport": "^1.0.0",
    "@jeff-tian/nest-keycloak-connect": "^1.1.3",
    "@nestjs/common": "^7.0.9",
    "@nestjs/core": "^7.0.9",
    "@nestjs/jwt": "^7.0.0",
    "@nestjs/passport": "^7.0.0",
    "@nestjs/platform-express": "^7.0.9",
    "@typegoose/typegoose": "^6.2.1",
    "class-validator": "^0.11.0",
    "co-wechat-api": "^3.10.0",
    "cookie-parser": "^1.4.5",
    "data.either": "^1.5.2",
    "dotenv": "^8.2.0",
    "keycloak-connect": "^10.0.1",
    "mongoose": "^5.8.7",
    "nestjs-typegoose": "^7.0.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-keycloak-bearer": "^2.0.5",
    "passport-local": "^1.0.0",
    "ramda": "^0.26.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.3",
    "typegoose": "^5.9.1",
    "uuid": "^8.0.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@jeff-tian/sleep": "^1.0.0",
    "@jeff-tian/tplant": "^2.4.6",
    "@nestjs/cli": "^7.1.4",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.9",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.1",
    "@types/hapi__joi": "^16.0.4",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.5",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "@types/ramda": "^0.26.37",
    "@types/supertest": "^2.0.8",
    "jest": "^24.9.0",
    "nock": "^12.0.3",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.1.1",
    "ts-node": "^8.4.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.0",
    "typescript": "^3.6.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  },
  "deploy-node-app": {
    "prod": {
      "context": "kubesail-jeff-tian",
      "registry": "index.docker.io/v1/",
      "type": "server",
      "port": 3000,
      "protocol": "https",
      "entrypoint": "src\\main.ts",
      "registryUsername": "jefftian",
      "isPublic": true
    }
  }
}
